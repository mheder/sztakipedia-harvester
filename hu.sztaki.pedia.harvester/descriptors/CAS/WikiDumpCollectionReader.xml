<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>hu.sztaki.pedia.uima.reader.WikiDumpCollectionReader</implementationName>
  <processingResourceMetaData>
    <name>Wikidump Collection Reader</name>
    <description/>
    <version>1.0</version>
    <vendor>MTA Sztaki</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>InputFile</name>
        <description>Input wikidump XML file</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>Language</name>
        <description>ISO language code for the documents</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>OutputSofa</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>RedirectPage</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>NonArticleTitles</name>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>OutputSofa</name>
        <value>
          <string>rawwiki</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>InputFile</name>
        <value>
          <string>__INPUTFILE</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Language</name>
        <value>
          <string>en</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>RedirectPage</name>
        <value>
          <string>#REDIRECT</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>NonArticleTitles</name>
        <value>
          <array>
<string>Category:</string>
            <string>Category talk:</string>
            <string>File:</string>
            <string>File talk:</string>
            <string>Template:</string>
            <string>Template talk:</string>
            <string>Wikipedia:</string>
            <string>WP:</string>
            <string>WPM:</string>
            <string>Portal:</string>
            <string>Topic:Discussion:</string>
            <string>Media:</string>
            <string>MediaWiki:</string>
            <string>MediaWiki talk:</string>
            <string>Special:</string>
            <string>Help:</string>
            <string>Help talk:</string>
            <string>Talk:</string>
            <string>User:</string>
            <string>User talk:</string>
          </array>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <imports>
        <import location="../typeSystemDescriptor.xml"/>
      </imports>
    </typeSystemDescription>
    <capabilities>
      <capability>
        <inputs/>
        <outputs>
          <type allAnnotatorFeatures="true">org.apache.uima.examples.SourceDocumentInformation</type>
        </outputs>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>true</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</collectionReaderDescription>
